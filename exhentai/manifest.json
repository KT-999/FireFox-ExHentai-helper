{
  "manifest_version": 3,
  "name": "ExHentai 小幫手",
  "version": "1.1",
  "description": "一個用於 exhentai.org 的輔助工具，提供多種閱讀模式、網格預覽並支援鍵盤操作。",
  "developer": {
    "name": "KT-999",
    "url": "https://github.com/KT-999/FireFox-ExHentai-helper"
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "*://exhentai.org/*",
    "*://e-hentai.org/*",
    "*://forums.e-hentai.org/*"
  ],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "ExHentai 小幫手",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "modules/grid_view.js",
        "modules/history.js",
        "modules/reader.js",
        "modules/reader_horizontal.js",
        "modules/reader_vertical.js",
        "modules/utils.js"
      ],
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ExHentai-helper@kenny"
    }
  }
}
