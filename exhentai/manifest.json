{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.5.3.0",
  "default_locale": "en",
  "developer": {
    "name": "KT-999",
    "url": "https://github.com/KT-999/FireFox-ExHentai-helper"
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "contextMenus"
  ],
  "host_permissions": [
    "https://exhentai.org/*",
    "https://e-hentai.org/*",
    "https://forums.e-hentai.org/*"
  ],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "modules/grid_view.js",
        "modules/history.js",
        "modules/reader.js",
        "modules/reader_horizontal.js",
        "modules/reader_vertical.js",
        "modules/search_enhancer.js",
        "modules/tag_translator.js",
        "modules/utils.js"
      ],
      "matches": ["*://exhentai.org/*", "*://e-hentai.org/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ExHentai-helper@kenny.dev",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
